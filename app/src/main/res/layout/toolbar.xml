<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorToolbarBackground"
    android:minHeight="?attr/actionBarSize">

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?actionBarItemBackground"
        android:contentDescription="@string/app_name"
        android:padding="16dp"
        android:src="@drawable/ic_menu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/btn_menu"
        android:layout_toRightOf="@+id/btn_menu"
        android:text="@string/title_toolbar"
        android:textColor="@color/colorToolbarTitle"
        android:textSize="23sp"
        tools:ignore="RelativeOverlap" />

    <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/btn_asus_menu"
        android:layout_toStartOf="@+id/btn_asus_menu"
        android:background="?actionBarItemBackground"
        android:contentDescription="@string/app_name"
        android:src="@drawable/asus_ic_search" />

    <ImageButton
        android:id="@+id/btn_asus_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="?actionBarItemBackground"
        android:contentDescription="@string/app_name"
        android:src="@drawable/asus_ic_menu" />

</RelativeLayout>